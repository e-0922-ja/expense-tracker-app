// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id                String        @id @default(uuid())
  firstName         String        @db.VarChar(50)
  lastName          String        @db.VarChar(50)
  email             String        @unique @db.VarChar(255)
  password          String        @db.VarChar(50)
  registeredAt      DateTime
  updatedAt         DateTime
  userFriendships   Friendships[] @relation("UserFriendships")
  friendFriendships Friendships[] @relation("FriendFriendships")
}

model Status {
  id           Int           @id
  statusName   String        @unique
  registeredAt DateTime
  Friendships  Friendships[]
}

model Friendships {
  id           String   @id @default(uuid())
  user         Users    @relation("UserFriendships", fields: [userId], references: [id])
  userId       String
  friend       Users?   @relation("FriendFriendships", fields: [friendId], references: [id])
  friendId     String?
  friendEmail  String   @unique @db.VarChar(255)
  status       Status   @relation(fields: [statusId], references: [id])
  statusId     Int
  registeredAt DateTime
  updatedAt    DateTime
}
